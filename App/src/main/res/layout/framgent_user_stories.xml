<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/me_stories_list_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:padding="10dp"
		android:layout_margin="10dp"
		android:background="@drawable/layout_background_shadow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<TextView
		android:layout_margin="5dp"
		android:id="@+id/user_profile_stories_empty_text_view"
		android:text="@string/user_profile_stories_empty_text"
		android:layout_gravity="center_horizontal"
		android:visibility="gone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<com.lovingheart.app.view.ExpandableListView
		android:id="@+id/me_stories_list_view"
		android:background="@color/lovingheart_white"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	</LinearLayout>
</ScrollView>
