<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/me_stories_list_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:layout_margin="5dp"
		android:id="@+id/user_profile_stories_empty_text_view"
		android:text="@string/user_profile_stories_empty_text"
		android:visibility="gone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<ListView
		android:id="@+id/me_stories_list_view"
		android:background="@color/lovingheart_white"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
</LinearLayout>
