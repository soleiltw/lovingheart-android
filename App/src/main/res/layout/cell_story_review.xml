<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<LinearLayout
		android:orientation="horizontal"
		android:id="@+id/story_review_content_layout"
		android:padding="10dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:background="@drawable/shape_round"
			android:src="@drawable/ic_action_user"
			android:id="@+id/user_avatar_image_view"
			android:layout_width="48dp"
			android:layout_height="48dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_marginLeft="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:hint="name"
				android:id="@+id/user_name_text_view"/>

			<LinearLayout
				android:weightSum="1"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_weight="0.5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<com.beardedhen.androidbootstrap.FontAwesomeText
						android:id="@+id/story_review_1_star"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="3dp"
						android:textSize="6dp"
						fontawesometext:fa_icon="fa-star" />
					<com.beardedhen.androidbootstrap.FontAwesomeText
						android:id="@+id/story_review_2_star"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						android:layout_margin="3dp"
						android:textSize="6dp"
						fontawesometext:fa_icon="fa-star" />
					<com.beardedhen.androidbootstrap.FontAwesomeText
						android:id="@+id/story_review_3_star"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="3dp"
						android:textSize="6dp"
						fontawesometext:fa_icon="fa-star" />
					<com.beardedhen.androidbootstrap.FontAwesomeText
						android:id="@+id/story_review_4_star"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="3dp"
						android:textSize="6dp"
						fontawesometext:fa_icon="fa-star" />
					<com.beardedhen.androidbootstrap.FontAwesomeText
						android:id="@+id/story_review_5_star"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="3dp"
						android:textSize="6dp"
						fontawesometext:fa_icon="fa-star" />
					</LinearLayout>

				<TextView
					android:layout_weight="0.5"
					android:id="@+id/story_review_date_text_view"
					android:hint="Date"
					android:layout_gravity="center_vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:textAppearanceMedium"
				android:hint="Review"
				android:id="@+id/story_review_text_view"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>