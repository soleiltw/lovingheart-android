<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:background="@drawable/layout_background_shadow"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<ImageView
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:padding="5dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ic_action_book"
		android:id="@+id/home_random_idea_caption_image_view"
		android:layout_gravity="center_horizontal"/>

	<TextView
		android:id="@+id/home_random_idea_caption_text_view"
		android:text="Explore more idea"
		android:textColor="@color/icon_red"
		android:layout_gravity="center_vertical"
		android:textAppearance="?android:textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>