<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:layout_margin="5dp"
		android:background="@drawable/layout_background_shadow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:id="@+id/story_teller_content_layout"
			android:padding="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:background="@drawable/shape_round"
				android:src="@drawable/ic_action_user"
				android:id="@+id/user_avatar_image_view"
				android:layout_width="48dp"
				android:layout_height="48dp"/>



			<LinearLayout
				android:orientation="vertical"
				android:layout_marginLeft="10dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:hint="name"
					android:id="@+id/user_name_text_view"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:textAppearanceMedium"
					android:hint="Story"
					android:id="@+id/story_content_text_view"/>


				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<include layout="@layout/layout_story_info_group" />
				</LinearLayout>


			</LinearLayout>


		</LinearLayout>

		<ImageView
			android:layout_marginBottom="10dp"
			android:background="@color/background_gray_color"
			android:id="@+id/story_content_image_view"
			android:minHeight="50dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</LinearLayout>