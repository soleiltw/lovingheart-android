<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:layout_margin="5dp"
		android:background="@drawable/layout_background_shadow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:id="@+id/story_teller_content_layout"
			android:padding="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<include layout="@layout/layout_user_image_name" />

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:textAppearanceMedium"
				android:hint="Story"
				android:id="@+id/story_content_text_view"/>

			<include layout="@layout/layout_story_info_group" />

			</LinearLayout>

		<ImageView
			android:layout_marginBottom="10dp"
			android:background="@color/background_gray_color"
			android:id="@+id/story_content_image_view"
			android:minHeight="50dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</LinearLayout>