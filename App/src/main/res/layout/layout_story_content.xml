<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/theme_color_3"
		android:scaleType="centerCrop"
		android:id="@+id/me_stories_image_view"
		android:layout_gravity="center_horizontal"/>

	<TextView
		android:textAppearance="?android:textAppearanceMedium"
		android:hint="Last story content"
		android:id="@+id/me_stories_last_share_content_text_view"
		android:textColor="@color/story_text_color"
		android:maxLines="3"
		android:ellipsize="end"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:textAppearance="?android:textAppearanceMedium"
		android:hint="Inspired from"
		android:id="@+id/me_stories_last_share_inspired_from_text_view"
		android:textColor="@color/story_light_text_color"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:textAppearance="?android:textAppearanceMedium"
		android:hint="Story on"
		android:id="@+id/me_stories_last_share_date_Text_view"
		android:textColor="@color/story_light_text_color"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>