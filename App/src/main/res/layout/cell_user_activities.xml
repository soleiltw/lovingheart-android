<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/story_teller_content_layout"
			android:paddingBottom="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<include
				android:id="@+id/user_activities_layout"
				layout="@layout/layout_user_image_name" />


			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:hint="Story Content"
				android:id="@+id/story_content_text_view"/>

			<ImageView
				android:id="@+id/story_content_image_view"
				android:background="@drawable/story_image_background"
				android:layout_marginTop="10dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>

		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:hint="Date"
			android:id="@+id/created_at_text_view"
			android:layout_alignParentRight="true"/>

	</RelativeLayout>