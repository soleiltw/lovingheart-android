<resources>

	<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarItemBackground">@drawable/selectable_background_lovingheart</item>
		<item name="popupMenuStyle">@style/PopupMenu.Lovingheart</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Lovingheart</item>
		<item name="actionBarTabStyle">@style/ActionBarTabStyle.Lovingheart</item>
		<item name="actionDropDownStyle">@style/DropDownNav.Lovingheart</item>
		<item name="actionBarStyle">@style/ActionBar.Solid.Lovingheart</item>
		<item name="actionModeBackground">@drawable/cab_background_top_lovingheart</item>
		<item name="actionModeSplitBackground">@drawable/cab_background_bottom_lovingheart</item>
		<item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Lovingheart</item>

		<!-- Light.DarkActionBar specific -->
		<item name="actionBarWidgetTheme">@style/Theme.Lovingheart.Widget</item>

	</style>

	<style name="ActionBar.Solid.Lovingheart" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@drawable/ab_solid_lovingheart</item>
		<item name="backgroundStacked">@drawable/ab_stacked_solid_lovingheart</item>
		<item name="backgroundSplit">@drawable/ab_bottom_solid_lovingheart</item>
		<item name="progressBarStyle">@style/ProgressBar.Lovingheart</item>
	</style>

	<style name="ActionBar.Transparent.Lovingheart" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/ab_transparent_lovingheart</item>
		<item name="progressBarStyle">@style/ProgressBar.Lovingheart</item>
	</style>

	<style name="PopupMenu.Lovingheart" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_lovingheart</item>
	</style>

	<style name="DropDownListView.Lovingheart" parent="@style/Widget.AppCompat.ListView.DropDown">
		<item name="android:listSelector">@drawable/selectable_background_lovingheart</item>
	</style>

	<style name="ActionBarTabStyle.Lovingheart" parent="@style/Widget.AppCompat.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_lovingheart</item>
	</style>

	<style name="DropDownNav.Lovingheart" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
		<item name="android:background">@drawable/spinner_background_ab_lovingheart</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_lovingheart</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_lovingheart</item>
	</style>

	<style name="ProgressBar.Lovingheart" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_lovingheart</item>
	</style>

	<style name="ActionButton.CloseMode.Lovingheart" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_lovingheart</item>
	</style>

	<!-- this style is only referenced in a Light.DarkActionBar based theme -->
	<style name="Theme.Lovingheart.Widget" parent="@style/Theme.AppCompat">
		<item name="popupMenuStyle">@style/PopupMenu.Lovingheart</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Lovingheart</item>
	</style>

</resources>